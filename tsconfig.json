{
      "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext", // esnext require the type to be module in package.json. so we use NodeNext for the module type for compatibility
        "moduleResolution": "NodeNext",
        "lib": ["esnext"],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false,
        // to get the output in the dist folder during development,set these to false
        "allowImportingTsExtensions":false,  
        "noEmit": false
      },
      "include": [
        "src/**/*.ts"
      ],
      "exclude": [
        "node_modules",
        "dist"
      ]
    }